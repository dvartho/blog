---
const { linkURL, iconAlt, text, icon } = Astro.props;
---
 
<a href={linkURL} >
<span class="text">
{text}
<img src={icon} alt={iconAlt} class="icon" />
</span>
</a>

<style>
    .text {
        background-color: #FAFAC6;
        border-radius: 10px;
        padding: 5px;
        margin-right: 5px;
        color: rgb(131, 37, 79);
        text-decoration-line: none;
    }

    a:hover {
        background-color: inherit;
    }

    .icon {
        width: 2em;
        height: 2em;
        vertical-align: middle;
    }
</style>
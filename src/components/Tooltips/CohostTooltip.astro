---
import Tooltip from './Tooltip.astro';

import dayjs from 'dayjs';
import 'dayjs/locale/es';
import relativeTime from 'dayjs/plugin/relativeTime';

// time from date
dayjs.extend(relativeTime)

const { username, postTitle, postDate, postURL, site } = Astro.props;
const timeFromPostDate = dayjs(postDate).locale('es').fromNow();

var siteIcon;
var tooltipMessage;
---

<Tooltip
  url={postURL}
  icon={`/src/images/eggbug logo por @nex3 en cohost.svg`}
  message={`"${postTitle}" por ${username} ${timeFromPostDate}`}
>
<slot />
</Tooltip>